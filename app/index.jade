  body(ng-app='defsynthApp', ng-controller='MainCtrl')
    //if lt IE 10
      p.browsehappy
        | You are using an
        strong outdated
        | browser. Please
        a(href='http://browsehappy.com/') upgrade your browser
        | to improve your experience.

    .wrap-container(ng-class="{'show-nav': collapse}")
      #header.navbar.navbar-default.navbar-fixed-top(role='navigation', bs-navbar)
        .container
          .navbar-header
            a.navbar-brand.text-muted(ui-sref='index') defsynth
            button.navbar-toggle(
              type='button'
              ng-click='collapse = !collapse'
            )
              i.fa.fa-ellipsis-v

          #top-nav-collapse.collapse.navbar-collapse
            ul.nav.navbar-nav
              li(ui-sref-active='active')
                a(ui-sref='index') Home
              li(ui-sref-active='active')
                a(ui-sref='style-guide') Style Guide

              li.auth.pull-right
                a(
                  ng-show='user.email'
                  ng-click='logOut()'
                )= 'Sign out '
                  i.fa.fa-sign-out

                a(
                  ng-show='!user.email'
                  ng-click='showAuthDialog()'
                )= 'Sign in '
                  i.fa.fa-sign-in

      .wrap
        .container#content
          div(ui-view)

          span#spinner(
            us-spinner='{radius:30, width: 2, length: 16, color: "#dedede"}'
            spinner-key='main-loading'
          )


      #mobile-nav
        ul.nav.nav-pills.nav-stacked
          li.auth
            a(
              ng-show='user.email'
              ng-click='logOut()'
            )= 'Sign out'

            a(
              ng-show='!user.email'
              ng-click='showAuthDialog()'
            )= 'Sign in'
          li(ui-sref-active='active')
            a(ui-sref='index') Home
          li(ui-sref-active='active')
            a(ui-sref='style-guide') Style Guide


      footer#footer
        .container
          .text-center
            .btn-group
              a.btn.btn-link.btn-xs(ui-sref='terms') Terms &amp; Conditions

