footer-height = 60px
header-height = 50px

// sticky footer
html, body
  height 100%

  &.loading #content
    opacity 0
    transition-duration 0s

  .wrap
    padding-top header-height
    min-height 100%
    margin-bottom -(footer-height)

    &:after
      content ""
      display block
      height footer-height

  #footer
    height footer-height

  #content
    opacity 1
    transition-property opacity
    transition-duration 0.5s

body
  color #555
  font-family "Source Sans Pro"

  .wrap
    .navbar.navbar-fixed-top
      background linear-gradient(top, #fff 66%, rgba(255, 255, 255, 0))
      padding-bottom 25px
      border-bottom 0

      .navbar-brand
        background rgb(100, 100, 100)
        color #fff
        text-transform uppercase
        letter-spacing 2.5px
        font-weight 200
        font-family 'Source Code Pro'

      .navbar-toggle
        color rgb(130, 130, 130)
        font-size 28px
        padding 0 20px 0 20px
        border 0
        margin-right 0
        margin-top 0
        border-radius 0
        height header-height
        position absolute
        right 0

        &:focus
          color rgb(130, 130, 130)
          background transparent


        &:hover
          background rgb(130, 130, 130)
          color #fff

    #top-nav-collapse
      background #fff
      box-shadow 0 4px 6px 0px (rgba(0, 0, 0, 0.1))

  small
    font-weight 100

  h1, h2, h3, h4, h5, h6, label, th
    font-family "Open Sans"

  button
    letter-spacing 0.8px

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

// correct anchor links for header padding
.anchor
  display block
  position relative
  top -(header-height)
  visibility hidden

.sprite-test
  sprite($logo)
  margin 0 auto


#footer
  padding-top 19px
  color #777
  border-top 1px solid #e5e5e5
