doctype html
html.no-js
  head
    meta(charset='utf-8')
    title defsynth
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    base(href='/')
    meta(name='fragment', content='!')
    link(rel='shortcut icon', href='/favicon.ico?v=2')
    link(
      href='http://fonts.googleapis.com/css?family=Source+Code+Pro:300,500,900'
      rel='stylesheet'
      type='text/css'
    )
    link(
      href='http://fonts.googleapis.com/css?family=Open+Sans:100,300,400,600,800|Source+Sans+Pro:100,300,400,900'
      rel='stylesheet'
      type='text/css'
    )

    script.
      window.CONFIG = @@GLOBALS;

