.auth-dialog
  p
    font-size 18px
    text-align center
    margin-bottom 20px
    margin 20px 20px 40px

  ul.auth-options
    padding-top 20px
    padding-left 0
    padding-bottom 30px

    li
      list-style none
      display inline-block
      text-align center
      cursor pointer

      &:hover
        a
          color #626262

        button.github
          box-shadow 0 1px 6px 1px rgba(95, 95, 95, 0.5)

        button.facebook
          box-shadow 1px 3px 6px 1px rgba(59,89,152,0.5)

        button.google
          box-shadow 0 1px 6px 1px rgba(221,75,57,0.5)


      button
        border-radius 50%
        height 60px
        width 60px
        border none
        box-shadow 0 0 0 0 rgba(255, 255, 255, 0)
        transition-property box-shadow
        transition-duration 0.1s

        &.github
          background linear-gradient(-195deg, white, #666)

        &.facebook
          background linear-gradient(-195deg, white, rgba(59,89,152,1))

        &.google
          background linear-gradient(-195deg, white, rgba(221,75,57,1))

        i
          font-size 30px
          text-shadow 0px 0px 4px rgba(0, 0, 0, 0.3)

      a
        display block
        text-align center
        margin-top 10px
        font-size 16px
        font-family "Open Sans"

        &:hover
          text-decoration none

@media (min-width: 400px)
  .auth-dialog
    ul.auth-options
      li
        button
          height 100px
          width 100px

          i
            font-size 44px

        a
          font-size 20px
